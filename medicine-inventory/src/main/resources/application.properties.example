# ==========================================================
# \u30C7\u30FC\u30BF\u30D9\u30FC\u30B9\u63A5\u7D9A\u8A2D\u5B9A (Supabase)
# ==========================================================
# URL: Supabase\u306E[Settings] > [Database] > [Connection string] > [JDBC] \u304B\u3089\u53D6\u5F97
spring.datasource.url=jdbc:postgresql://[YOUR_PROJECT_ID].supabase.co:6543/postgres?user=postgres&password=[your_password_here]
spring.datasource.username=postgres
spring.datasource.password=[your_password_here]
spring.datasource.driver-class-name=org.postgresql.Driver

# ==========================================================
# JPA / Hibernate \u8A2D\u5B9A
# ==========================================================
# \u8D77\u52D5\u6642\u306BDB\u306E\u30C6\u30FC\u30D6\u30EB\u69CB\u9020\u3068Entity\u306E\u6574\u5408\u6027\u3092\u30C1\u30A7\u30C3\u30AF\u3059\u308B
spring.jpa.hibernate.ddl-auto=validate
# \u5B9F\u884C\u3055\u308C\u308BSQL\u3092\u30B3\u30F3\u30BD\u30FC\u30EB\u306B\u8868\u793A\u3059\u308B\uFF08\u30C7\u30D0\u30C3\u30B0\u7528\uFF09
spring.jpa.show-sql=true
# SQL\u3092\u8AAD\u307F\u3084\u3059\u304F\u6574\u5F62\u3057\u3066\u8868\u793A\u3059\u308B
spring.jpa.properties.hibernate.format_sql=true

# ==========================================================
# Java 21 / \u30E2\u30C0\u30F3\u8A2D\u5B9A
# ==========================================================
# \u4EEE\u60F3\u30B9\u30EC\u30C3\u30C9\u3092\u6709\u52B9\u5316\uFF08Java 21\u306E\u30D1\u30D5\u30A9\u30FC\u30DE\u30F3\u30B9\u3092\u6700\u5927\u9650\u6D3B\u7528\uFF09
spring.threads.virtual.enabled=true